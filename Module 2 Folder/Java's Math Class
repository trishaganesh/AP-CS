/**
 * The purpose of this program is to calculate the hypotenuse of two right traingles
 * using the nthPower, powValue, Math.random(), Math.pow(), and Math.sqrt methods.
 *
 * @author Trisha Ganesh
 * @version 10/31/2020
 */

public class PyTheorem {

    public static void main(String[] args) {
        //triangle 1

        //raising side 1 to the nth power
        //example of generating a value from 5-23
        int randNumber1 = (int)(Math.random() * 18) + 5;
        double nthPower = 2;
        double powValue1 = Math.pow(randNumber1, nthPower);
        //raising side 2 to the nth power
        int randNumber2 = (int) (Math.random() * 18) + 5;
        double nthPower2 = 2;
        double powValue2 = Math.pow(randNumber2, nthPower2);
        //square root
        double value = powValue1 + powValue2;
        double hypotenuse = Math.sqrt(value);
        //calculations
        System.out.print("Triangle 1       " + "Side 1: " + randNumber1 + "\t\t\t" + "Side 2: " + randNumber2 + "\t\t\t"+ "Hypotenuse:" + "\t" + hypotenuse);
        System.out.println();

        //triangle 2

        //raising side 1 to the nth power
        int randNumber3 = (int)(Math.random() * 18) + 5;
        double nthPower3 = 2;
        double powValue3 = Math.pow(randNumber3, nthPower3);
        //raising side 2 to the nth power
        int randNumber4 = (int)(Math.random() * 18) + 5;
        double nthPower4 = 2;
        double powValue4 = Math.pow(randNumber4, nthPower4);
        //square root
        double value2 = powValue3 + powValue4;
        double hypotenuse2 = Math.sqrt(value2);
        //calculations
        System.out.println("Triangle 2       " + "Side 1: " + randNumber3 + "\t\t\t" + "Side 2: " + randNumber4 + "\t\t\t"+ "Hypotenuse:" + "\t" + hypotenuse2);
        System.out.println();
    }
}
